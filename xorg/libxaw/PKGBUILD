# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=libxaw
pkgver=1.0.7
pkgrel=1
pkgdesc="X11 Athena Widget library"
arch=('i686')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libxmu' 'libxpm')
options=('!libtool')
source=(${url}/releases/individual/lib/libXaw-${pkgver}.tar.bz2)
md5sums=('815e74de989ccda684e2baf8d12cf519')

build() {
  cd "${srcdir}/libXaw-${pkgver}"
  ./configure --prefix= --sysconfdir=/etc --disable-static || return 1
  make || return 1
}

package() {
  cd "${srcdir}/libXaw-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
