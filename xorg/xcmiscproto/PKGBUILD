# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=xcmiscproto
pkgver=1.2.0
pkgrel=1
pkgdesc="X11 XC-Miscellaneous extension wire protocol"
arch=(any)
url="http://xorg.freedesktop.org/"
license=('custom')
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('1a55e042b33c0e0aaf2299942315a5208d644707')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
