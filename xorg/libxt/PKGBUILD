# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=libxt
pkgver=1.0.8
pkgrel=1
pkgdesc="X11 toolkit intrinsics library"
arch=('i686')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libsm' 'libx11')
options=('!libtool')
source=(${url}/releases/individual/lib/libXt-${pkgver}.tar.bz2)
sha1sums=('d5e3dfba90a12169771399b3e2ccae07243489c9')

build() {
  cd "${srcdir}/libXt-${pkgver}"
  ./configure --prefix= --sysconfdir=/etc --disable-static || return 1
  make || return 1
}

package() {
  cd "${srcdir}/libXt-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1

# install custom license
  install -Dm644 "${srcdir}/libXt-${pkgver}/COPYING" \
      "${pkgdir}/share/licenses/${pkgname}/COPYING" || return 1
}
