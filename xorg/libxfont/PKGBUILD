# Maintainer: Michael Walker <mike@barrucadu.co.uk>

pkgname=libxfont
pkgver=1.4.1
pkgrel=1
pkgdesc="X11 font rasterisation library"
arch=(i686)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libfontenc' 'freetype2' 'fontsproto')
makedepends=('xtrans' 'fontcacheproto' 'xproto')
options=('!libtool')
source=(${url}/archive/individual/lib/libXfont-${pkgver}.tar.bz2)
md5sums=('4f2bed2a2be82e90a51a24bb3a22cdf0')

build() {
  cd "${srcdir}/libXfont-${pkgver}"
  ./configure --prefix= --sysconfdir=/etc --disable-static || return 1
  make || return 1
}

package() {
  cd "${srcdir}/libXfont-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
