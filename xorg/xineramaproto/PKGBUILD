# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=xineramaproto
pkgver=1.2
pkgrel=1
pkgdesc="X11 Xinerama extension wire protocol"
arch=(any)
url="http://xorg.freedesktop.org/"
license=('custom')
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
md5sums=('a8aadcb281b9c11a91303e24cdea45f5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
