# Maintainer: <mike@barrucadu.co.uk>

pkgname=libvorbis
pkgver=1.3.1
pkgrel=1
pkgdesc="Vorbis codec library"
arch=('i686')
license=('custom')
url="http://www.xiph.org/ogg/vorbis/"
depends=('libogg')
options=('!libtool')
source=(http://downloads.xiph.org/releases/vorbis/${pkgname}-${pkgver}.tar.gz)
md5sums=('016e523fac70bdd786258a9d15fd36e9')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  #-march=i686 optimizes too much according to Arch PKGBUILD
  # Note: Try *with* optimisation
  CFLAGS=${CFLAGS/-march=$CARCH} ./configure --prefix= --disable-static || return 1
  make || return 1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install || return 1
  install -Dm644 COPYING "${pkgdir}/share/licenses/$pkgname/LICENSE" || return 1
}
