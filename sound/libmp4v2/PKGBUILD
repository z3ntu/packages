# Maintainer: Michael Walker <mike@barrucadu.co.uk>

pkgname=libmp4v2
pkgver=1.9.1
pkgrel=1
pkgdesc="MPEG-4 library"
arch=('i686')
license=('MPL')
url="http://code.google.com/p/mp4v2/"
options=('!libtool')
source=(http://mp4v2.googlecode.com/files/mp4v2-${pkgver}.tar.bz2
        pathmax.diff)
md5sums=('986701929ef15b03155ac4fb16444797'
         '1e1e8a3053df90c1287a1d76908fe76d')

build() {
  cd ${srcdir}/mp4v2-${pkgver}

  ./configure --prefix= || return 1

  patch -Np0 -i ${srcdir}/pathmax.diff

  make || return 1
}

package() {
  cd ${srcdir}/mp4v2-${pkgver}
  make DESTDIR=${pkgdir} install || return 1
  make DESTDIR=${pkgdir} install-man || return 1
}
