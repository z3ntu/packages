# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=xbitmaps
pkgver=1.1.0
pkgrel=1
pkgdesc="X.org Bitmap files"
arch=('any')
url="http://xorg.freedesktop.org/"
license=('custom')
source=(${url}/releases/individual/data/${pkgname}-${pkgver}.tar.bz2 LICENSE)
md5sums=('f9ddd4e70a5375508b3acaf17be0d0ab'
         '546bd110a7759da7ca26c07a6e29b642')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix= || return 1
  make || return 1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install || return 1
  install -D -m644 ../LICENSE ${pkgdir}/share/licenses/${pkgname}/LICENSE
}
