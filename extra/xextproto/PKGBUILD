#Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=xextproto
pkgver=7.1.1
pkgrel=1
pkgdesc="X11 various extension wire protocol"
arch=('any')
license=('custom')
url="http://xorg.freedesktop.org/"
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
md5sums=('fb6ccaae76db7a35e49b12aea60ca6ff')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
