# Maintainer: Stephen Gilles <stephendgilles@gmail.com>

pkgname=libxtst
pkgver=1.1.0
pkgrel=2
pkgdesc="X11 Testing -- Resource extension library"
arch=('i686')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxext>=1.1' 'libxi>=1.3' 'recordproto>=1.14' 'inputproto>=2.0')
makedepends=('xmlto')
options=('!libtool')
source=(${url}/releases/individual/lib/libXtst-${pkgver}.tar.bz2)
md5sums=('dd6f3e20b87310187121539f9605d977')

build() {
  cd "${srcdir}/libXtst-${pkgver}"
  ./configure --prefix= --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -D -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/LICENSE" || return 1
}
