# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=libxcb
pkgver=1.6
pkgrel=1
pkgdesc="X11 client-side library"
arch=('i686')
url="http://xcb.freedesktop.org/"
depends=('xcb-proto' 'libxdmcp' 'libxau')
makedepends=('libxslt' 'python')
conflicts=()
options=('!libtool')
license=('custom')
source=(${url}/dist/${pkgname}-${pkgver}.tar.bz2
        libxcb-1.1-no-pthread-stubs.patch)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i "${srcdir}/libxcb-1.1-no-pthread-stubs.patch" || return 1
  libtoolize --force --copy || return 1
  aclocal || return 1
  autoconf || return 1
  automake --add-missing || return 1
  ./configure --prefix= --enable-xinput || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
md5sums=('cba9f6d1137ef00d9b326726d0bab6fd'
         '45b306e6a2857db1fe008eefe5803a79')
