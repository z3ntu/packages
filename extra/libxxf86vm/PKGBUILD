# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=libxxf86vm
pkgver=1.1.0
pkgrel=1
pkgdesc="X11 XFree86 video mode extension library"
arch=('i686')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libxext' 'xf86vidmodeproto')
options=('!libtool')
source=(${url}/releases/individual/lib/libXxf86vm-${pkgver}.tar.bz2)
md5sums=('b431ad7084e1055fef99a9115237edd8')

build() {
  cd "${srcdir}/libXxf86vm-${pkgver}"
  ./configure --prefix= --disable-static || return 1
  make || return 1
}

package() {
  cd "${srcdir}/libXxf86vm-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -d -m755 "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
