# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=libpciaccess
pkgver=0.11.0
pkgrel=1
pkgdesc="X11 PCI access library"
arch=('i686')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('glibc')
makedepends=('pkgconfig')
options=('!libtool')
source=(${url}/releases/individual/lib/${pkgname}-${pkgver}.tar.bz2
				pciaccess-hurd-hack.diff)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p1 < ../pciaccess-hurd-hack.diff
	autoreconf
  ./configure --prefix= --sysconfdir=/etc || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
md5sums=('686320dcec98daad0bdfb8894d4f2a2b'
         'c3c0c1aa3f95e27ce6a2f73d0cd5ecbb')
