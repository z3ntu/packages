#Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=kbproto
pkgver=1.0.4
pkgrel=1
pkgdesc="X11 XKB extension wire protocol"
arch=(any)
url="http://xorg.freedesktop.org/"
license=('custom')
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('d300745389d3a80d90c9a3c989651f228db486e5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
