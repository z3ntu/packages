# $Id: PKGBUILD 56527 2009-10-22 16:37:17Z jgc $
# Contributor: Jan de Groot <jgc@archlinux.org>

pkgname=dmxproto
pkgver=2.3
pkgrel=1
pkgdesc="X11 Distributed Multihead X extension wire protocol"
arch=(any)
url="http://xorg.freedesktop.org/"
license=('custom')
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
md5sums=('880a41720b2937e2660dcdc0d34a8791')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
