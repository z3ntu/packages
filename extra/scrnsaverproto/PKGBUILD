# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=scrnsaverproto
pkgver=1.2.0
pkgrel=1
pkgdesc="X11 Screen Saver extension wire protocol"
arch=('any')
license=('custom')
url="http://xorg.freedesktop.org/"
source=(${url}/releases/individual/proto/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('c734cfe9a1ce57fd42957389dcc90518fd7ca6b6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= || return 1
  make || return 1 
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1 
  install -m755 -d "${pkgdir}/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/share/licenses/${pkgname}/" || return 1
}
