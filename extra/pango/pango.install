# arg 1:  the new package version
post_install() {
	bin/pango-querymodules >etc/pango/pango.modules
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
	if [ -f etc/pango/pango.modules ]; then
		rm etc/pango/pango.modules
	fi
	post_install $1
}

# arg 1:  the old package version
pre_remove() {
	rm etc/pango/pango.modules
}
