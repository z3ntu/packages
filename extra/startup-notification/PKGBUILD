# Maintainer: Matthias Lanzinger <mlaenz@gmail.com>

pkgname=startup-notification
pkgver=0.10
pkgrel=1
pkgdesc="Monitor and display application startup"
arch=('i686')
license=('LGPL')
depends=('libx11' 'libsm' 'xcb-util')
options=('!libtool')
url="http://www.freedesktop.org"
source=(http://www.freedesktop.org/software/startup-notification/releases/${pkgname}-${pkgver}.tar.gz)
md5sums=('bca0ed1c74bc4e483ea2ed12a5717354')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix= --localstatedir=/var --sysconfdir=/etc || return 1
  make || return 1
}  
  
package(){
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
}
