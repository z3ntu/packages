# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=attr
pkgver=2.4.44
pkgrel=2
pkgdesc="Extended attribute support library for ACL support"
arch=('i686')
url="http://oss.sgi.com/projects/xfs/"
license=('LGPL')
groups=('base')
depends=('glibc') 
makedepends=('gettext') 
replaces=('xfsattr')
provides=('xfsattr')
conflicts=('xfsattr')
options=('!libtool')
source=(ftp://ftp.archlinux.org/other/attr/attr-${pkgver}.src.tar.gz)
sha256sums=('e01fa00686072a02dddf994e6217be950f51c1dc0852ad2e210c48b6e8de793a')

build() {
  cd $srcdir/$pkgname-$pkgver  
  autoconf
  ./configure --prefix= --libexecdir=/lib
  sed -i -e 's/man2//g' man/Makefile
  make || return 1 
}

package() {
  cd $srcdir/$pkgname-$pkgver 
  make prefix=$pkgdir libexedir=$pkgdir/lib install install-lib install-dev
}

