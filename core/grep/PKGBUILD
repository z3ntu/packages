# Maintainer: Matthias Lanzinger <mlaenz@gmail.com>

pkgname=grep
pkgver=2.7
pkgrel=1
pkgdesc="A string search utility"
arch=(i686)
url="http://www.gnu.org/software/grep/"
license=('GPL3')
groups=('base')
depends=('glibc' 'sh' 'pcre')
install=grep.install
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz
		grep_gnu.patch)
md5sums=('6dd9931a52501519d7779a27cf953326'
         '39f089ccd46f33e69da9d45708371e5e')


build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 < ${srcdir}/grep_gnu.patch
  ./configure --prefix= \
              --without-included-regex
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}


