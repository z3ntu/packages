# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=patch
pkgver=2.6.1
pkgrel=1
pkgdesc="A utility to apply patch files to original sources"
arch=('i686')
url="http://www.gnu.org/software/patch/patch.html"
license=('GPL')
groups=('base-devel')
depends=('glibc')
optdepends=('ed: Interpret the patch as an ed script; for patch -e functionality(deprecated)')
source=(ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('d758eb96d3f75047efc004a720d33daf')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix= --mandir=/share/man
  make || return 1
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make prefix=${pkgdir} mandir=${pkgdir}/share/man install || return 1
}

