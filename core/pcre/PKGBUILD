# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=pcre
pkgver=8.10
pkgrel=2
pkgdesc="A library that implements Perl 5-style regular expressions"
arch=('i686') 
url="http://www.pcre.org/"
license=('BSD')
depends=('gcc-libs')
options=('!libtool' '!makeflags')
source=(ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --build=${CHOST} --prefix= --enable-utf8 --enable-unicode-properties 
  make 
}

package(){
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install 
  (cd "${pkgdir}/lib" ; ln -sf libpcre.so.0 libpcre.so) 
  install -D -m644 LICENCE "${pkgdir}/share/licenses/${pkgname}/LICENSE" 
}
md5sums=('780867a700e9d4e4b9cb47aa5453e4b2')
