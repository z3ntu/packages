# Maintainer: Matthias Lanzinger <mlaenz@gmail.com>

pkgname=mpfr
pkgver=3.0.0
pkgrel=1
pkgdesc="Multiple-precision floating-point library"
arch=(i686)
url="http://www.mpfr.org/"
license=('LGPL')
depends=('gmp>=5.0.1')
options=('!libtool')
install=mpfr.install
source=(ftp://ftp.gnu.org/pub/gnu/mpfr/$pkgname-$pkgver.tar.xz
		mpfr-3.0.0-p3.patch)
md5sums=('8ab3bef2864b8c6e6a291f5603141bbd'
         '74fc2253afc4900eeacb21df893e6395')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix= \
              --enable-thread-safe --enable-shared
  make || return 1
  make check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}


