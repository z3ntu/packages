# Maintainer: Matthias Lanzinger <mlaenz@gmail.com>

pkgname=binutils
pkgver=2.19.1
pkgrel=1
pkgdesc="A set of programs to assemble and manipulate binary and object files"
arch=('i586-hurd')
url="http://www.gnu.org/software/binutils/"
license=('GPL3')
groups=('base')
depends=('glibc' 'zlib')
install=binutils.install
source=(ftp://ftp.gnu.org/pub/gnu/binutils/$pkgname-$pkgver.tar.bz2)
md5sums=('09a8c5821a2dfdbb20665bc0bd680791')

build() {
  cd $srcdir
  rm -rf build
  mkdir build
  cd build

  ../$pkgname-$pkgver/configure --host=i586-pc-gnu --prefix= \
              --disable-multilib --mandir=/share/man --infodir=/share/info 
  make || return 1
}

package() {
  cd $srcdir/build
  
  make DESTDIR="$pkgdir/" install
  rm -rf $pkgdir/i586-pc-gnu #only when cross-compiling?
}

# vim:set ts=2 sw=2 et:
