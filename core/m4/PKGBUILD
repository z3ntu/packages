# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>
pkgname=m4
pkgver=1.4.14
pkgrel=2
pkgdesc="m4 macro processor"
arch=('i686')
license=('GPL3')
url="http://www.gnu.org/software/m4"
install=m4.install
groups=('base-devel')
depends=('glibc' 'bash')
source=(ftp://ftp.gnu.org/gnu/m4/$pkgname-$pkgver.tar.xz
        03-missing-sys-stat-include)

build() {
  cd ${srcdir}/$pkgname-$pkgver
  patch -p1 -i "${srcdir}/03-missing-sys-stat-include"
  ./configure --prefix=
  make 
}

package() {
  cd ${srcdir}/$pkgname-$pkgver
  make prefix=${pkgdir} install
}
md5sums=('e2b871099546846d1df586f195f79b53'
         '0feee858ccf24abfbd993e5d0cb0f36b')
