# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=acl
pkgver=2.2.49
pkgrel=1
pkgdesc="Library for filesystem ACL support"
arch=('i686')
url="http://savannah.nongnu.org/projects/acl"
license=('LGPL')
groups=('base')
depends=('attr')
replaces=('xfsacl')
provides=('xfsacl')
conflicts=('xfsacl')
options=('!libtool')
source=(http://download.savannah.gnu.org/releases-noredirect/$pkgname/$pkgname-$pkgver.src.tar.gz acl-hurd-MAX_PATH.patch)

md5sums=('181445894cca986da9ae0099d5ce2d08'
         '296cfd1deaa9d5072e7c03651f5f686f')

build() {
  cd $srcdir/acl-$pkgver
  patch -p1 < $srcdir/acl-hurd-MAX_PATH.patch

  ./configure --prefix= --libexecdir=/lib
  make || return 1 
}

package() {
  cd $srcdir/acl-$pkgver
  make prefix=$pkgdir/ libexecdir=$pkgdir/lib install install-lib install-dev
}
