# Maintainer: Stephen Gilles <stephendgilles@gmail.com>
# Contributor: Eric Belanger <eric@archlinux.org>

pkgname=psmisc
pkgver=22.13
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('i686')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('base')
depends=('glibc' 'ncurses')
changelog=ChangeLog
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.gz
	killall-path-max.diff)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p0 src/killall.c < ${srcdir}/killall-path-max.diff
  autoreconf
  ./configure --prefix=
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
md5sums=('e2c339e6b65b730042084023784a729e'
         '4ec1ca4c47b42f8e459bf5ce17f93f13')
