# Maintainer: Alexander Preisinger <alexander.preisinger@gmail.com>

pkgname=sqlite3
pkgver=3.7.1
pkgrel=1
pkgdesc="A C library that implements an SQL database engine"
arch=('i686')
license=('custom')
url="http://www.sqlite.org/"
depends=('readline')
makedepends=('tcl')
conflicts=('sqlite')
replaces=('sqlite')
source=(http://www.sqlite.org/sqlite-$pkgver.tar.gz
	license.txt)
options=(!libtool)

build() {
  cd ${srcdir}/sqlite-${pkgver}
  export LTLINK_EXTRAS="-ldl"
  export CFLAGS="$CFLAGS -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_COLUMN_METADATA=1"
  ./configure --prefix= \
	--enable-threadsafe \
	--enable-threads-override-locks \
	--enable-cross-thread-connections \
	--disable-static \
	--enable-load-extension 

  # rpath removal
  sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool
  sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool

  make 
}

package() {
  cd ${srcdir}/sqlite-${pkgver}
  make DESTDIR=${pkgdir} install 
  install -Dm0644 sqlite3.1 ${pkgdir}/share/man/man1/sqlite3.1

  # license
  install -Dm644 ${srcdir}/license.txt ${pkgdir}/share/licenses/${pkgname}/license.txt
}
md5sums=('96bebad5f9009f0437d9878b8728dab6'
         'c1cdbc5544034d9012e421e75a5e4890')
