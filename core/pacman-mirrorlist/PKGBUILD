# Maintainer: Michael Walker <mike@barrucadu.co.uk>
# Contributor: Matthias Lanzinger

pkgname=pacman-mirrorlist
pkgver=20110812
pkgrel=1
pkgdesc="Arch Hurd mirror list for use by pacman"
arch=('any')
url="http://www.archhurd.org/mirrors.php"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)
sha256sums=('a96714283df572235ebbaa3c049c3f1453b3c891a9854fcdf28724a4182a8efe')
depends=('pacman')

# NOTE on building this package:
# * Run bash -c ". PKGBUILD; updatelist"
# * Update the checksums, update pkgver
# * Build the package
updatelist() {
  wget -O mirrorlist http://dev.archhurd.org/mirrorlist.php
}

build() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}

